pipeline {
    agent any

    stages {
        stage('Clone Code Repository') {
            steps {
                git branch: 'dev', url: 'https://github.com/harishgorla5/car-booking.git'
            }
        }

        stage('Build Code') {
            steps {
                script {
                    echo "Building the project with Maven..."
                    sh 'mvn clean install'
                }
            }
        }

        stage('Build Image') {
            steps {
                script {
                    // Clone Project4 repository
                    dir('/var/lib/jenkins/workspace/Project4') {
                        git branch: 'project4', url: 'https://github.com/harishgorla5/Project4.git'
                    }

                    // Copy the WAR file from the build location to the Project4 directory (Docker context)
                    sh 'cp /var/lib/jenkins/workspace/Dev/taxi-booking/target/*.war /var/lib/jenkins/workspace/Project4/'

                    // Build the Docker image
                    dir('/var/lib/jenkins/workspace/Project4') {
                        sh '''
                            docker build -t car-booking-image -f Dockerfile .
                        '''
                    }
                }
            }
        }
    }
}
